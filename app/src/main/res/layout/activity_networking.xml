<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.rxjava2.android.samples.ui.networking.NetworkingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button             android:textAllCaps="false"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:onClick="map"
            android:text="@string/map"
            android:textAllCaps="false"/>

        <Button             android:textAllCaps="false"
            android:id="@+id/zip"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:onClick="zip"
            android:text="@string/zip"/>

        <Button             android:textAllCaps="false"
            android:id="@+id/flatMapAndFilter"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:onClick="flatMapAndFilter"
            android:text="@string/flatMapAndFilter"
            android:textAllCaps="false"/>

        <Button             android:textAllCaps="false"
            android:id="@+id/take"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:onClick="take"
            android:text="@string/take"
            android:textAllCaps="false"/>

        <Button             android:textAllCaps="false"
            android:id="@+id/flatMap"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:onClick="flatMap"
            android:text="@string/flatMap"
            android:textAllCaps="false"/>

        <Button             android:textAllCaps="false"
            android:id="@+id/flatMapWithZip"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:onClick="flatMapWithZip"
            android:text="@string/flatMapWithZip"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:color/holo_blue_light"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            />

    </LinearLayout>
</ScrollView>
